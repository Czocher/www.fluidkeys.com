## <a name="previous"></a> Previous weeknotes:

<ul>
<% blog.articles[1..-1].each do |article| %>
  <li class="blog-index">
    <%= link_to "#{article.title}", article.url %>
    <%= article.date.strftime('%A') %> <%= article.date.day.ordinalize %> <%= article.date.strftime('%b %Y') %>
  </li>
<% end %>
</ul>

